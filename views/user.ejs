<section id="main-content">
 <section class="wrapper">
    
    <table>
        <h4>Users <span class="badge badge-danger">{{usersCount}}</span> <button class="btn btn-primary" style="float:right" data-toggle="modal" data-target="#addUserModal">+Add User</button></h4>

    <hr>
        <thead>
          <tr>
            <th>S.No.</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
  
      
          <tr v-for="(user,i) in users">
            <td data-column="S.No.">{{i+1}}</td>
            <td data-column="Name"><button class="btn btn-link" data-toggle="modal" data-target="#userDetailModal" @click="showUserDetails(user.name,user.role,user.createdAt)">{{user.name}}</button></td>
            <td data-column="Email">{{user.email}}</td>
            <td data-column="Role">{{user.role}}</td>
            <td data-column="Actions">&nbsp;&nbsp; <button class="btn btn-primary btn-xs" data-toggle="modal" data-target="#editUserModal" @click="editUser(user._id,i)"><i class="fa fa-pencil"></i></button>
                &nbsp;&nbsp; <button class="btn btn-danger btn-xs" data-toggle="modal" data-target="#confirmDeleteModal" @click="setDeleteUser(user._id)"><i class="fa fa-trash-o "></i></button></td>
          </tr>
        </tbody>
        </table>

        <!--add role modal-->
      
        <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">+Add User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
      
              <div class="modal-body">
                <div class="row form-group">
                  <div class="col col-md-3"><label for="name" class=" form-control-label">Name</label></div>
                  <div class="col-12 col-md-9"><input type="text" id="text-input" name="text-input" placeholder="Enter name" class="form-control" v-model="user.name"></div>
                </div>
                <div class="row form-group">
                  <div class="col col-md-3"><label for="name" class=" form-control-label">Email</label></div>
                  <div class="col-12 col-md-9"><input type="email" id="text-input" name="text-input" placeholder="Enter email" class="form-control" v-model="user.email"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="name" class=" form-control-label">Password</label></div>
                    <div class="col-12 col-md-9"><input type="password" id="text-input" name="text-input" placeholder="Enter password" class="form-control" v-model="user.password"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="name" class=" form-control-label">Role</label></div>
                    <div class="col-12 col-md-9">
                        <select v-model="user.role" class="form-control">
                            <option value="" disabled>Select Role</option>
                            <option v-for="role in roles" :value="role">{{role}}</option>
                        </select>
                    </div>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" @click="addUser" data-dismiss="modal">Add User</button>
              </div>
            </div>
          </div>  
        </div>
        <!--/add role modal-->

        <!--edit role modal-->
        <div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">+Edit User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
      
              <div class="modal-body">
                <div class="row form-group">
                    <div class="col col-md-3"><label for="name" class=" form-control-label">Name</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="text-input" placeholder="Enter name" class="form-control" v-model="user.name"></div>
                  </div>
                  <div class="row form-group">
                      <div class="col col-md-3"><label for="name" class=" form-control-label">Password</label></div>
                      <div class="col-12 col-md-9"><input type="password" id="text-input" name="text-input" placeholder="Enter password" class="form-control" v-model="user.password"></div>
                  </div>
                  <div class="row form-group">
                      <div class="col col-md-3"><label for="name" class=" form-control-label">Role</label></div>
                      <div class="col-12 col-md-9">
                          <select name="role" class="form-control" v-model="user.role">
                            <option value="" disabled>Select Role</option>
                            <option v-for="role in roles" :value="role">{{role}}</option>
                          </select>
                      </div>
                    </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" @click="addUser" data-dismiss="modal">Edit user</button>
              </div>
            </div>
          </div>  
        </div>
        <!--/edit role modal-->
        
        <!--confirm delete modal-->
          
        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
      
        
              <div class="modal-footer">

                <button type="button" class="btn btn-danger" @click="deleteUser" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
              </div>
            </div>
          </div>  
        </div>
        <!--/confirm delete modal-->

         <!--User detail modal-->
        
      <div class ="modal" tabindex="-1" role="dialog" id="userDetailModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">

                Date:&nbsp;&nbsp;&nbsp;&nbsp;
                <select class="form-control form-control-sm" v-model="year" style="width:auto;">
                    <option v-for="year in years" :value="year">{{year}}</option>
                    

                </select>&nbsp;&nbsp;&nbsp;&nbsp;
                <select class="form-control form-control-sm" v-model="month" style="width:auto;">
                    <option v-for="month in months" :value="month">{{month}}</option>
                </select>&nbsp;&nbsp;&nbsp;&nbsp;
                <select class="form-control form-control-sm" v-model="day" style="width:auto;">
                    <option v-for="d in date" :value="d">{{d}}</option>
                </select>&nbsp;&nbsp;&nbsp;&nbsp;
                <button class="btn btn-primary btn-sm" @click="getPostsCount">Search</button>&nbsp;&nbsp;&nbsp;&nbsp;
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group list-group-flush" v-if="user.role=='writer'">
                    <li class="list-group-item">Name:{{user.name}}</li>
                    <li class="list-group-item">Role:{{user.role}}</li>
                    <li class="list-group-item">Published posts:{{publishedCount}}</li>
                    <li class="list-group-item">Pending posts:{{pendingCount}}</li>
                </ul>
                <ul class="list-group list-group-flush" v-if="user.role=='editor' || user.role=='admin'">
                <li class="list-group-item">Name:{{user.name}}</li>
                <li class="list-group-item">Role:{{user.role}}</li>
                <li class="list-group-item">Written posts:{{writtenCount}}</li>
                <li class="list-group-item">Checked posts:{{checkedCount}}</li>
              </ul>
              
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div> 

    </section>
</section>
    <!--main content end-->
    
    
